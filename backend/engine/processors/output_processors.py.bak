class TextOutputProcessor(BaseNodeProcessor):
    """
    Processore per nodi di output email.
    Simula l'invio di una email con il contenuto specificato.
    """
    async def execute(self, node, context: ExecutionContext) -> dict:
        logger.info("Processando output email", details={"node_name": node.name, "node_id": node.node_id})
        input_data = context.get_input_for_node(node.node_id)
        email_content = self._extract_email_content(input_data)
        if email_content is None:
            raise ValueError(f"Nessun contenuto email da inviare nel nodo '{node.name}'")
        config = node.config or {}
        recipient = config.get("recipient", "test@example.com")
        subject = config.get("subject", "Output da workflow")
        result = {
            "recipient": recipient,
            "subject": subject,
            "content": email_content
        }
        logger.info("Email generata", details={"node_name": node.name, "recipient": recipient, "subject": subject})
        return result

    def _extract_email_content(self, input_data: Any) -> str:
        if isinstance(input_data, dict) and "email_content" in input_data:
            return input_data["email_content"]
        if isinstance(input_data, str):
            return input_data
        return None
